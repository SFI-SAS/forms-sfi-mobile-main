{
  "expo": {
    "name": "Safemetrics",
    "slug": "forms-sfi",
    "version": "1.0.1",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "scheme": "formssfi",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "icon": "./assets/icon-ios.png",
      "infoPlist": {
        "NSCameraUsageDescription": "Se requiere la cámara para el reconocimiento facial y captura de evidencias",
        "NSMicrophoneUsageDescription": "Se requiere el micrófono para el reconocimiento facial",
        "NSPhotoLibraryUsageDescription": "Se requiere acceso a la galería para adjuntar imágenes en formularios",
        "NSPhotoLibraryAddUsageDescription": "Se requiere acceso para guardar evidencias fotográficas",
        "NSLocationWhenInUseUsageDescription": "Se requiere la ubicación para registrar la posición de formularios",
        "NSLocationAlwaysUsageDescription": "Se requiere la ubicación para registrar la posición de formularios"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "INTERNET",
        "ACCESS_NETWORK_STATE"
      ],
      "package": "com.mauro_morales.formssfi",
      "googleServicesFile": "./android/app/google-services.json"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router",
      "@react-native-firebase/app",
      [
        "@react-native-firebase/crashlytics",
        {
          "enabled": true
        }
      ],
      "expo-web-browser",
      "expo-asset"
    ],
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "7658a23a-0b9f-41ae-8b1c-eac3c748de11"
      }
    },
    "newArchEnabled": true,
    "runtimeVersion": "1.0.1",
    "updates": {
      "url": "https://u.expo.dev/7658a23a-0b9f-41ae-8b1c-eac3c748de11"
    }
  }
}
